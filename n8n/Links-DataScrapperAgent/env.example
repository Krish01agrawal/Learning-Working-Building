# Environment Variables Template

Copy this file to `.env` and customize the values for your environment.

## Project Configuration
PROJECT_NAME=Links-DataScrapperAgent
PROJECT_VERSION=1.0.0
PROJECT_DESCRIPTION=Automated web scraping and link analysis

## n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/webhook

## File Paths
INPUT_FILE_PATH=/files/input_links.xlsx
OUTPUT_FILE_PATH=/files/web-scrape-output.xlsx
TEMP_DIRECTORY=/tmp/Links-DataScrapperAgent
LOG_DIRECTORY=/logs

## Web Scraping Configuration
SCRAPING_TIMEOUT=30000
SCRAPING_RETRIES=3
SCRAPING_DELAY=1000
USER_AGENT=Mozilla/5.0 (compatible; Links-DataScrapperAgent/1.0)

## Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

## Data Processing
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=5
DATA_VALIDATION_ENABLED=true

## Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

## Error Handling
ERROR_RETRY_ATTEMPTS=3
ERROR_RETRY_DELAY=5000
ERROR_LOG_ENABLED=true

## Output Configuration
OUTPUT_FORMAT=xlsx
INCLUDE_METADATA=true
INCLUDE_CONTENT=true
INCLUDE_IMAGES=false
INCLUDE_LINKS=true

## Security
ENABLE_SSL_VERIFICATION=true
ALLOW_REDIRECTS=true
MAX_REDIRECTS=5

## Performance
ENABLE_CACHING=true
CACHE_TTL=3600
MEMORY_LIMIT=512MB

## Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
